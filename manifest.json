{
  "manifest_version": 2,
  "name": "DPlus Party - Watch Disney Plus with Friends",
  "description": "Watch Disney+ (Disney Plus) videos together!",
  "version": "1.3.0",
  "icons": { "128": "images/dplus.png" },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["*://www.disneyplus.com/*"],
      "js": ["jquery-3.4.1.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": ["dplusparty.min.js", "dplus_chat.css", "jquery-3.4.1.min.js"]
}