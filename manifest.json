{
  "manifest_version": 2,
  "name": "DPlus Party",
  "description": "Watch Disney+ videos together!",
  "version": "0.4",
  "icons": { "128": "dplus.png" },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["*://www.disneyplus.com/*"],
      "js": ["jquery-3.4.1.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": ["webrtc.js"]
}